@model IEnumerable<ProjetoEcommerce.Models.Cliente>

<p>
   <a asp-controller="Cliente" asp-action="CadastrarCliente">Cadastra Cliente</a>
</p>
<table class="table">
   <thead>
       <tr>
			<th>
               @Html.DisplayNameFor(model => model.CodCli)
           </th>
           <th>
               @Html.DisplayNameFor(model => model.NomeCli)
           </th>
           <th>
               @Html.DisplayNameFor(model => model.TelCli)
           </th>
           <th>
               @Html.DisplayNameFor(model => model.EmailCli)
           </th>
           <th>Ação</th>
       </tr>
   </thead>
   <tbody>
       @foreach (var item in Model)
       {
           <tr>
               <td>
                    @Html.DisplayFor(modelItem => item.CodCli)
               </td>
               <td>
                    @Html.DisplayFor(modelItem => item.NomeCli)
               </td>
               <td>
                    @Html.DisplayFor(modelItem => item.TelCli)
               </td>
               <td>
                    @Html.DisplayFor(modelItem => item.EmailCli)
               </td>
               <td>
                   @Html.ActionLink("Editar", "EditarCliente", new { id = item.CodCli }) |
                    @Html.ActionLink("Excluir", "ExcluirCliente", new { id = item.CodCli },
                            new { onclick = "return confirm('Deseja realmente Excluir este item?');" })
               </td>
           </tr>
       }
   </tbody>
</table>